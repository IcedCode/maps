<map proto="1.4.2">
<name>Abood</name>
<version>1.0.3</version>
<objective>Koth</objective>
<authors>
    <author uuid="bd133f12-724a-4ca9-af7b-f808810aa835"/> <!--  Ref  -->
    <author uuid="2d372806-0e62-4e44-87f7-2394540f5203"/> <!-- Tkes -->

    <author uuid="97d1cc45-0f69-482b-9974-09351aef9dfa"/> <!-- lunaceee -->
    <author uuid="6c5d7783-27fd-4ac5-8a1d-ba35206edf53"/> <!-- _Nathy -->
</authors>
<teams>
    <team id="blue" color="blue" max="5">Blue</team>
    <team id="red" color="dark red" max="5">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="20" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="2">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="4" amplifier="10">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="90">
            <cylinder base="10,34,1.5" radius="2" height="0"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="0">
            <point>.5,46,-44.5</point>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <region yaw="180">
            <point>.5,46,47.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
    <objective id="castle-point-filter">castle-point</objective>
    <objective id="dungeon-point-filter">dungeon-point</objective>
    <any id="visual-materials-filter">
        <material>wool:0</material>
        <material>wool:11</material>
        <material>wool:14</material>
    </any>
</filters>
<regions>
    <cuboid id="cave" min="-25.5,10,3.5" max="-19.5,12,-2.5"/>
    <!-- <cuboid id="cave-captured" min="-18,36,-34" max="-11,54,-21"/> -->
    <cuboid id="top" min="-25.5,23,3.5" max="-19.5,25,-2.5"/>
    <cuboid id="middle" max="12.5,21,3.5" max="18.5,23,-2.5"/>
    <apply block="never"/>
</regions>
<king>
    <hills required="false" capture-time="5s" points="1" time-multiplier="0" show-progress="true" neutral-state="true" decay="0" recovery="1" permanent="false" visual-materials="visual-materials-filter">
        <hill name="Top" id="top-point" captured="top" capture="top" progress="top"/>
        <hill name="Cave" id="cave-point" capture="cave" progress="cave" captured="cave"/>
        <hill name="middle" id="middle-point" captured="middle" capture="middle" progress="middle"/>
    </hills>
</king>
<score>
    <limit>750</limit>
</score>
<spawners>
    <spawner id="gapple-spawner" delay="8s">
        <spawn-region>
            <point>0,10,0</point>
        </spawn-region>
        <player-region>
            <cylinder base="0.5,10,0.5" radius="1" height="3"/>
        </player-region>
        <item material="golden apple"/>
    </spawner>
</spawners>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="10" material="arrow"/>
</kill-reward>
<respawn delay="1s" auto="true"/>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
